@model SoreBiblioteca.Web.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/stylelibros.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Añadir Cliente</title>
</head>
<body>
    <nav class="nav-principal">
        <a class="nav-icon" href="#">
            <i class="fas fa-bars"></i>
        </a>
        <div class="menu-desplegable">
            <a asp-controller="Home" asp-action="Index">Inicio</a>
            <a asp-controller="Home" asp-action="LibrosPage">Libros</a>
            <a asp-controller="Home" asp-action="PrestamosDisp">Prestamos</a>
            <a asp-controller="Home" asp-action="ProveedoresPage">Proveedores</a>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <form asp-controller="Clientes" asp-action="Create" method="POST">
                    <div class="form-group">
                        <button type="submit">Añadir Cliente</button>
                    </div>
                </form>
            </div>
        </div>
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Clientes.First().Idcliente)</th>
                    <th>@Html.DisplayNameFor(model => model.Clientes.First().Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Clientes.First().Apellido)</th>
                    <th>@Html.DisplayNameFor(model => model.Clientes.First().Correo)</th>
                    <th>@Html.DisplayNameFor(model => model.Clientes.First().Direccion)</th>
                    <th>@Html.DisplayNameFor(model => model.Clientes.First().Estado)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Clientes != null)
                {
                    foreach (var item in Model.Clientes)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Idcliente)</td>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                            <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                            @if (item.Estado == "Y")
                            {
                                <td>En prestamo</td>
                            }
                            else if(item.Estado == "N")
                            {
                                <td>Libre</td>
                            }
                            else
                            {
                                <td>No valido</td>
                            }
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                    @Html.ActionLink("Editar", "Edit", "Clientes", new { id = item.Idcliente }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Detalles", "Details", "Clientes", new { id = item.Idcliente }, new { @class = "btn btn-success" })
                                    @Html.ActionLink("Eliminar", "Delete", "Clientes", new { id = item.Idcliente }, new { @class = "btn btn-danger" })
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">No data available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
