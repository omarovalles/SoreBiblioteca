@model IEnumerable<SoreBiblioteca.Domain.Entities.Libro>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/stylelibros.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />
    <title>Añadir Libro</title>
</head>
<body>
    <nav class="nav-principal">
        <a class="nav-icon" href="#">
            <i class="fas fa-bars"></i>
        </a>
        <div class="menu-desplegable">
            <a href="index.html">Inicio</a>
            <a href="#">Libros</a>
            <a href="#">Prestamos</a>
            <a href="#">Proveedores</a>
        </div>
    </nav>
    <div class="container">
        <h2>Añadir Libro</h2>
        <form asp-action="Create" asp-controller="Libros" method="POST">
            <div class="form-group">
                <label for="autor">Autor:</label>
                <input type="text" id="autor" name="autor" required>
            </div>
            <div class="form-group">
                <label for="titulo">Título:</label>
                <input type="text" id="titulo" name="titulo" required>
            </div>
            <div class="form-group">
                <label for="proveedores">Proveedor:</label>
                <input type="text" id="id_proveedor" name="id_proveedor" required>
            </div>
            <div class="form-group">
                <label for="stock">Stock:</label>
                <input type="number" id="stock" name="stock" required>
            </div>
            <button type="submit">Añadir Libro</button>
        </form>
    </div>
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Autor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Stock)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.IdproveedorNavigation)
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Autor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Titulo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stock)
                        </td>
                        <td>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Idlibro">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Idlibro">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Idlibro">Delete</a>
                        </td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <button type="button" class="btn btn-danger">Editar</button>
                                <button type="button" class="btn btn-danger">Detalles</button>
                                <button type="button" class="btn btn-warning">Eliminar</button>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">No data available</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
